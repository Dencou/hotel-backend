generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{

  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  email String @unique
  hash String

  name String

  feedbacks Feedback[]

  @@map("users")

}

model Hotel{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String @unique
  pricePerNight String
  extras String?
  country String
  city String
  
  

  feedbacks Feedback[]
  

  @@map("hotels")



}

model Feedback{
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  rating Int
  message String?

  userId Int
  hotelId Int
  
  user User @relation(fields: [userId], references: [id])
  hotel Hotel @relation(fields: [hotelId], references: [id])

  @@map("feedbacks")

}